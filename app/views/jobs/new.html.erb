<div class="container">
  <br>
  <div class="row">
    <% if @events.nil? || @events.empty? %>
      <div class="text-center">
        <h4>
          Você precisa criar um evento antes de enviar uma proposta
        </h4>
        <button type="button" class="navbar-easy-item navbar-easy-link btn-new-event" data-toggle="modal" data-target=".bs-example-modal-lg">Novo evento</button>
      </div>
    <% else %>
      <div class="text-center">
        <h3>Enviando proposta para <%= @professional.full_name %></h3>
        <h4><%= @professional.category.name %></h4>
        <p>Preço sugerido: R$<%= @professional.price_per_hour %>,00 / h</p>
        <br>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <%= simple_form_for [@professional, @job] do |f| %>
          <%= f.input :price %>
          <%= f.association :event, collection: @events %>
          <div class="button text-center">
            <%= f.button :submit, value: "Enviar proposta", class: "navbar-easy-item navbar-easy-link btn-new-event" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <%= render template: "events/new" %>
    </div>
  </div>
</div>

