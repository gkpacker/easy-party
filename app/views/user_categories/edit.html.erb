<h2>Select your category</h2>

<%= simple_form_for(@user, url: user_categories_update_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category, required: true %>
    <%= f.input :availability, required: true %>
    <%= f.input :price_per_hour, required: true %>
    <%= f.input :city, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
