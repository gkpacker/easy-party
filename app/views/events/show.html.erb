<div class="container">
  <h1>Organizer dashboard</h1>
  <h2><%= @event.title.capitalize %></h2>
  <%  @pictures.each do |picture| %>
    <%= cl_image_tag picture.picture.url, height: 100, width: 150, crop: :fill %>
  <% end %>

  <table class="table">
    <thead>
      <th>Job</th>
      <th>Price</th>
      <th>Status:</th>
      <th>Professional:</th>
    </thead>
    <tbody>
      <% @event.jobs.each do |job| %>
        <tr>
          <td><%= job.professional.category.name %></td>
          <td><%= job.price %></td>
          <td>
            <% if job.accepted? %>
              <% if job.done? %>
                done
              <% else %>
                accepted
              <% end %>
            <% else %>
              Acceptation pending
            <% end %>
          </td>
          <td><%= job.professional.first_name + job.professional.last_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Edit event", edit_event_path %>
  <%= link_to "Editar evento", edit_event_path(@event) %>
  <%= link_to "Cancelar evento", event_path(@event), method: :delete, confirm: 'Are you sure?' %>
</div>
