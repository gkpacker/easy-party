<div class="container">
  <h4>Evento: <strong> <%= @event.title.capitalize %></strong> <%= link_to edit_event_path(@event) do %>
    <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %> <%= link_to event_path(@event), method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %></h4>

  <h4>Data: <strong><%= @event.date %></strong></h4>
  <%  @pictures.each do |picture| %>
    <%= cl_image_tag picture.picture.url, height: 100, width: 150, crop: :fill %>
  <% end %>

  <table class="table">
    <thead class="head-show-event" >
      <th>Job</th>
      <th>Price</th>
      <th>Status:</th>
      <th>Professional:</th>
    </thead>
    <tbody>
      <% @event.jobs.each do |job| %>
        <tr>
          <td><%= job.professional.category.name %></td>
          <td>R$ <%= job.price %> / hora</td>
          <td>
           <% if job.accepted? %>
              <% if job.done? %>
                <p><i class="fa fa-dot-circle-o" aria-hidden="true"></i>  Done</p>
                <% if job.rating? %>
                  <p>Comentario deixado</p>
                <% else %>
                  <%= link_to "Review #{job.professional.first_name}", edit_job_path, class: "btn btn-primary" %>
                <% end %>
              <% else %>
                <p><i class="fa fa-check-square-o" aria-hidden="true"></i>  Accepted</p>
              <% end %>
            <% elsif job.accepted == false %>
                <p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>  Declined</p>
            <% else %>
              <p><i class="fa fa-clock-o" aria-hidden="true"></i>  Answer pending</p>
            <% end %>
          </td>
          <td><%= job.professional.first_name + " " + job.professional.last_name %></td>


          <td><%= link_to edit_job_path(job) do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>

            <% end %>
          </td>
          <td><%= link_to job_path(job), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash" aria-hidden="true"></i>

            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>
  </p>
  <p>
  </p>
</div>
