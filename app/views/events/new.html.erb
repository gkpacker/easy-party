
  <h2 class="text-center">Crie seu evento</h2>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for(@event, url: events_path, html: { multipart: true }) do |f| %>
        <%= f.error_notification %>
        <% if @event.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-inputs">
          <%= f.input :title, required: true %>
          <%= f.input :date, as: :string, required: true, :placeholder => 'DD/MM/YYYY', input_html: {class: "form-control datepicker"} %>
          <%= f.input :location, required: true %>

          <%= f.fields_for :pictures do |p| %>

            <div class="field">
              <%= p.file_field :pictures, class: "dropzone", :multiple => true, hint: false, name: "pictures[picture][]" %>
              <%= p.input :picture_cache, as: :hidden %>
            </div>
          <% end %>

          <%= f.text_area :description, style: "width: 100%;" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>


    </div>
  </div>

