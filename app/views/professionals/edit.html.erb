<div class="container">
  <h2 class="text-center" >Cadastre-se como Profissional Aut√¥nomo</h2>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <%= simple_form_for(@professional, url: professionals_path) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.association :category, required: true %>
          <%= f.input :availability, collection: [["Seg a Sex", 0], ["Finais de semana", 1]], as: :radio_buttons %>
          <%= f.input :price_per_hour, required: true %>
          <%= f.input :city, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
